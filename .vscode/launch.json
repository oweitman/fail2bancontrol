{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:9000",
            "webRoot": "${workspaceFolder}/src-frontend",
            "sourceMapPathOverrides": {
                // Map runtime /public/... zu lokal /src-frontend/dist/...
                "/*": "${workspaceFolder}/src-frontend/dist/*",
                "/public/*": "${workspaceFolder}/src-frontend/dist/*",

                // Optional: Default f√ºr node_modules, wenn relevant
                "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
                "webpack:///src/*": "${workspaceFolder}/src-frontend/*"
            }
        },
        {
            "name": "Python backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src-backend/app.py",
            "args": ["run", "--host", "0.0.0.0", "--port", "9000"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "STATIC_ROOT": "${workspaceFolder}/src-frontend/dist"
            }
        }
    ]
}

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome", // oder: "pwa-chrome"
            "url": "http://localhost:5173/",
            "webRoot": "${workspaceFolder}/src-frontend",
            "preLaunchTask": "frontend: dev"
        },
        {
            "name": "Python backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src-backend/app.py",
            "args": ["run", "--host", "0.0.0.0", "--port", "9000"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "STATIC_ROOT": "${workspaceFolder}/src-frontend/dist"
            }
        }
    ]
}
